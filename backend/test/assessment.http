  },
  "assessmentDate": "2026-01-17T10:30:00.000Z",
  "assessmentType": "Jebsen Hand Test"
}

###

# Get all assessments for authenticated parent
GET http://localhost:5000/api/assessments

###

# Get all assessments with pagination
GET http://localhost:5000/api/assessments?limit=10&skip=0

###

# Get a specific assessment by ID
GET http://localhost:5000/api/assessments/60a7c8f5e4b0a3d5c8e2f1a3

###

# Get all assessments for a specific child
GET http://localhost:5000/api/assessments/child/John Doe

###

# Update an assessment
PUT http://localhost:5000/api/assessments/60a7c8f5e4b0a3d5c8e2f1a3
Content-Type: application/json

{
  "observations": {
    "motorSkills": "Updated observation: Improved coordination",
    "concentration": "Better focus in second session"
  }
}

###

# Delete an assessment
DELETE http://localhost:5000/api/assessments/60a7c8f5e4b0a3d5c8e2f1a3
