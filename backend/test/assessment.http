### Assessment Routes

# Create a new assessment
POST http://localhost:5000/api/assessments
Content-Type: application/json

{
  "childInfo": {
    "name": "John Doe",
    "age": 8,
    "dominantHand": "right",
    "previousAssessments": "No previous assessments",
    "specificConcerns": "Difficulty with fine motor skills"
  },
  "testResults": [
    {
      "testId": "1",
      "testName": "Writing Test",
      "description": "Write a standardized 24-letter sentence",
      "timeInSeconds": 45.5,
      "completed": true
    },
    {
      "testId": "2",
      "testName": "Card Turning",
      "description": "Turn over 5 playing cards",
      "timeInSeconds": 12.3,
      "completed": true
    }
  ],
  "totalTime": 57.8,
  "observations": {
    "motorSkills": "Good coordination, slight tremor in dominant hand",
    "concentration": "Maintained focus throughout the assessment",
